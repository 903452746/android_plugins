<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:id="@+id/widget_customdialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:padding="5dp" >

        <ImageView
            android:id="@+id/widget_customdialog_title_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@android:color/transparent"
            android:src="@android:drawable/ic_dialog_info" />

        <TextView
            android:id="@+id/widget_customdialog_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/widget_customdialog_title_icon"
            android:background="@android:color/transparent"
            android:ellipsize="marquee"
            android:focusable="true"
            android:text="@string/customdialog_title"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:textColor="#FFFFFF"
            android:textSize="16sp" >
        </TextView>
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/widget_customdialog_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>