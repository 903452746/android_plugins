<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showCustomDialog"
        android:text="自定义对话框" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showCustomFullDialog"
        android:text="全屏对话框" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showCustomHalfDialog"
        android:text="半屏对话框" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showCustom2Dialog"
        android:text="xxxxxxx对话框" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="showCustomListenerDialog"
        android:text="用监听创建对话框" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testBean"
        android:text="测试ORM" />
        <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="testThread"
        android:text="测试线程" />
</LinearLayout>